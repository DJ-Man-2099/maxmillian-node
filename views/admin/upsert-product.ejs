<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form" action="/admin/<%=!product?'add-product':'edit-product'%>" method="POST"
                    enctype="multipart/form-data">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <% if(product) {%>
                        <input type="hidden" name="ID" id="ID" value="<%=product._id%>">
                        <%}%>
                            <div class="form-control">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="title" value="<%=!!product?product.title:''%>">
                            </div>
                            <div class="form-control">
                                <label for="image">Image</label>
                                <input type="file" name="image" id="image">
                            </div>
                            <!-- <div class="form-control">
                                <label for="imageURL">Image URL</label>
                                <input type="text" name="imageURL" id="imageURL"
                                    value="<%=!!product?product.imageURL:''%>">
                            </div> -->
                            <div class="form-control">
                                <label for="price">Price</label>
                                <input type="number" name="price" id="price" step="0.01"
                                    value="<%=!!product?product.price:''%>">
                            </div>
                            <div class="form-control">
                                <label for="description">Description</label>
                                <textarea name="description" id="description"
                                    rows="5"><%=!!product?product.description:''%></textarea>
                            </div>

                            <button class="btn" type="submit">
                                <%=!product?'Add':'Update'%> Product
                            </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>